# Database
DATABASE_URL="file:./dev.db"
# SHADOW_DATABASE_URL="file:./shadow.db"

# Server
PORT=3001
NODE_ENV=development

# OCR Provider Configuration
# Options: 'openai', 'google', 'dummy'
OCR_PROVIDER=dummy

# OpenAI API (required if OCR_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Vision API (required if OCR_PROVIDER=google)
# Set this to the path of your Google Cloud service account key JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://kit.dev.9rum.cc:5173,https://kit.dev.9rum.cc,http://kit.dev.9rum.cc
